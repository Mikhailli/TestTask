<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Common.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="shadowBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource GrayBrush}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <BlurEffect Radius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="splitBorder" TargetType="Border">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Height" Value="1.5"/>
        <Setter Property="Background" Value="{StaticResource OrangeBrush}"/>
    </Style>
</ResourceDictionary>