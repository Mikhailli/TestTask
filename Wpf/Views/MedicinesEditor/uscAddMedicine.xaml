<UserControl x:Class="Wpf.Views.MedicinesEditor.uscAddMedicine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"><Run Text="Медикаменты"/></TextBlock>
        
        <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"><Run Text="Название:"/></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewMedicineItemViewModel.Name}"/>

        <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"><Run Text="Описание:"/></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewMedicineItemViewModel.Description}"/>

        <TextBlock Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"><Run Text="Цена:"/></TextBlock>

        <TextBlock Grid.Column="0" Grid.Row="5" VerticalAlignment="Center"><Run Text="Поставщик:"/></TextBlock>
        <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding SupplierItems}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedSupplier}"/>

        <xctk:DoubleUpDown Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" FontSize="14" CultureInfo="ru-RU"
                           Value="{Binding NewMedicineItemViewModel.Rubles}" Minimum="0" Padding="2"/>

        <xctk:DoubleUpDown Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" FontSize="14" CultureInfo="ru-RU"
                   Value="{Binding NewMedicineItemViewModel.Kopecks}" Minimum="0" Maximum="99" Padding="2"/>
    </Grid>
</UserControl>
